<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/homepanel2"
    android:layout_height="match_parent"
    tools:context=".addnewitem">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="143dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            android:background="@null"
            app:srcCompat="@drawable/abc_vector_test" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="221dp"
            android:layout_height="57dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="31dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"

            android:fontFamily="sans-serif"
            android:text="New Item Add"
            android:textColor="#fff"
            android:textSize="24sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Item name / सामान  का नाम "
                android:inputType="textPersonName"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Sub types / आइटम का प्रकार"
                android:inputType="textPersonName"
                android:textSize="15dp" />




            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:fontFamily= "sans-serif-medium"
                android:textSize="20dp"
                android:text="Measuring units" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp" />


            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint=" Brand name / ब्रांड का नाम"
                android:inputType="textPersonName"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:fontFamily= "sans-serif-medium"
                android:textSize="20dp"
                android:text="Manufacturing date" />

            <EditText
                android:id="@+id/editText4"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="dd/mm/yyyy"
                android:inputType="textPersonName"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:fontFamily= "sans-serif-medium"
                android:textSize="20dp"
                android:text="Expirty date" />

            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="dd/mm/yyyy"
                android:inputType="textPersonName"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"

                android:layout_marginRight="50dp"
                android:fontFamily="sans-serif-medium"
                android:text="Size"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="match_parent"

                android:layout_height="46dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" />


            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Price / कीमत"
                android:inputType="textPersonName"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:hint="Quantity / मात्रा"
                android:inputType="textPersonName"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:fontFamily="sans-serif-medium"
                android:text="Choose Picture"
                android:textSize="20dp" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/add2"

                tools:ignore="VectorDrawableCompat" />

            <Button
                android:id="@+id/button2"
                android:layout_width="185dp"
                android:layout_height="43dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="40dp"
                android:textColor="#fff"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="10dp"
                android:text="picture choose करें"
                android:background="@drawable/style"

                />


            <Button
                android:id="@+id/button3"
                android:layout_width="185dp"
                android:layout_height="43dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="80dp"
                android:text=" click picture "
                android:background="@drawable/style"

                />






            <Button
                android:id="@+id/button"
                android:layout_width="185dp"
                android:layout_height="43dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="40dp"
                android:textColor="#fff"
                android:layout_marginRight="80dp"
                android:layout_marginBottom="80dp"
                android:text="सबमिट करें"
                android:background="@drawable/style"

                />


        </LinearLayout>
    </ScrollView>


</LinearLayout>